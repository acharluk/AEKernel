--[[ AEKernel Drawing API ]]--

local _w, _h = term.getSize()
local _bgcolor = colors.black
local _txcolor = colors.white
local _cursorx = 1
local _cursory = 1

function gw()
	return _w
end

function gh()
	return _h
end

function cls(x, y)
	term.clear()
	scp(x, y)
end

function scp(x, y)
	if x ~= nil and x > 0 then _cursorx = x end
	if y ~= nil and y > 0 then _cursory = y end
	term.setCursorPos(_cursorx, _cursory)
end

function scx(x)
	_cursorx = x
	scp(_cursorx, _cursory)
end

function scx(y)
	_cursory = y
	scp(_cursorx, _cursory)
end

function gcp()
	return term.getCursorPos()
end

function gcx()
	return _cursorx
end

function gcy()
	return _cursory
end